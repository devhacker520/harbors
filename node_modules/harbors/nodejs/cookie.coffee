exports.handle = (name, value) ->
  #TODO cookie的扩展选项
  self = this
  #没有传入参数
  return this.__cookie if name == undefined

  type = typeof name

  if type == "object"
    for p in name
      this._cookie.push p+'='+name[p]
  else if type == "string"
    if typeof value == "string"
      self._cookie.push name+'='+value
    return this.__cookie[name]
  return

exports.load = (string) ->
  temp = string.split ";"
  _cookie = {}
  for i in [temp.length-1..0]
    temp_2 = temp[i].split "="
    temp_2[0] = temp_2[0].replace /^\s*/,''
    _cookie[temp_2[0]] = temp_2[1]
  return _cookie;