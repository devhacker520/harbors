doctype 5
html
    head
        title Login
        link(href=url.resources+"admin/css/metro-bootstrap.css",rel="stylesheet")
        link(href=url.resources+"admin/css/login.css",rel="stylesheet")
    body
        if(err)
            div.container.has-error
                form.form-signin(action="/",method="POST")
                    h2.form-signin-heading Please sign in
                    input.form-control.has-error(type="text",name="name",placeholder="Email address",required,autofocus)
                    input.form-control(type="password",name="password",placeholder="Password",required)
                    input(type="file",name="file")

                    button.btn.btn-lg.btn-primary.btn-block(type="submit") 登陆
        else
            div.container
                form.form-signin(action="/",method="POST",enctype="multipart/form-data" )
                    h2.form-signin-heading Please sign in
                    input.form-control.has-error(type="text",name="name",placeholder="Email address",required,autofocus)
                    input.form-control(type="password",name="password",placeholder="Password",required)
                    input(type="file",name="upload",multiple="multiple"))

                    button.btn.btn-lg.btn-primary.btn-block(type="submit") 登陆
