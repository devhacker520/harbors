-var title='News';
include ../public/header.jade
.container
    .row
        -var nav='add';
        include ./public/side.jade
        .col-md-9
            .row
                .col-md-12
                    button.btn.btn-default(type="button",data-toggle="modal",data-target="#myModal") 原创
                    .modal.fade#myModal(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
                        .modal-dialog
                            .modal-content
                                .modal-header
                                    button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
                                    h4.modal-title#myModalLabel AddNews
                                form(role="form")
                                    .modal-body
                                        .form-group
                                            label(for="exampleInputEmail1") News Title
                                            input.form-control#exampleInputEmail1(type="text",placeholder="Enter title",name="News[title]")
                                        .form-group
                                            label(for="exampleInputEmail1") News Thum
                                            input.form-control#exampleInputEmail1(type="text",placeholder="Enter thum",name="News[thum]")
                                        .form-group
                                            label(for="exampleInputPassword1") News Content
                                            textarea.form-control(style="resize:none;height:300px;",name="News[content]")
                                        .form-group
                                            label(for="exampleInputEmail1") News Classify
                                            input.form-control#exampleInputEmail1(type="text",placeholder="Enter classify",name="News[classify]")
                                    .modal-footer
                                        button.btn.btn-default(type="submit") Submit
            .row(style="margin-top:10px;")
                .col-md-12
                    .table-responsive
                        table.table(style="table-layout:fixed;")
                            thead
                                tr
                                    th(style="width:40px;") ID
                                    th Source
                                    th Title
                                    th Href
                                    th Thum
                                    th Content
                                    th
                            tbody
                                -for(var i=0;i<tableData.length;i++)
                                    tr
                                        td= tableData[i].GrabId||'...'
                                        td= tableData[i].GrabSource||'...'
                                        td= tableData[i].GrabTitle||'...'
                                        td= tableData[i].GrabHref||'...'
                                        td= tableData[i].GrabThum||'...'
                                        td= tableData[i].GrabContent||'...'
                                        td
                                            button.btn.btn-default.btn-xs(type="button",data-toggle="modal",data-target="#Listloading",onclick="getList("+(tableData[i].GrabId||0)+");") List
                //-List列表的弹出窗口
                .modal.fade#Listloading(tabindex="-1",role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
                    .modal-dialog
                        .modal-content
                            .modal-header
                                button.close(type="button",data-dismiss="modal",aria-hidden="true") &times;
                                h4.modal-title#myModalLabel AddNews
                            .modal-body
                                .progress.progress-striped.active
                                    .progress-bar(role="progressbar",aria-valuenow="100",aria-valuemin="0",aria-valuemax="100",style="width: 100%")
                                        span.sr-only Plase Wait
                            .modal-body(style="display:none;")
                                table.table.table-hover.table-height
                                    thead
                                        tr
                                            th 标题
                                            th  链接
                                            th  操作
                                    tbody
                            .modal-footer
                                button.btn.btn-default(type="button",data-dismiss="modal",aria-hidden="true") Close




script(src="/static/js/admin/news/add.js")